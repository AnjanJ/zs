[
  {
    "label": "Build",
    "command": "npm",
    "args": ["run", "build"],
    "cwd": "$ZED_WORKTREE_ROOT",
    "env": {
      "NODE_ENV": "production"
    }
  },
  {
    "label": "Test",
    "command": "npm",
    "args": ["test"],
    "cwd": "$ZED_WORKTREE_ROOT"
  },
  {
    "label": "Lint",
    "command": "npm",
    "args": ["run", "lint"],
    "cwd": "$ZED_WORKTREE_ROOT"
  },
  {
    "label": "Dev Server",
    "command": "npm",
    "args": ["run", "dev"],
    "cwd": "$ZED_WORKTREE_ROOT",
    "use_new_terminal": true,
    "allow_concurrent_runs": false
  }
]