[
  {
    "label": "ðŸ“¦ Node.js Debug",
    "adapter": "JavaScript",
    "type": "node",
    "request": "launch",
    "program": "$ZED_WORKTREE_ROOT/index.js",
    "cwd": "$ZED_WORKTREE_ROOT",
    "env": {
      "NODE_ENV": "development"
    },
    "skipFiles": ["<node_internals>/**"]
  },
  {
    "label": "ðŸ§ª NPM Test Debug",
    "adapter": "JavaScript",
